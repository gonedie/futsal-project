<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e9e9e9">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_list"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/id_turnamen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/nama_turnamen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/deskripsi_turnamen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/deskripsi_turnamen"
            android:layout_below="@id/nama_turnamen"
            android:text="Id"
            android:textSize="15sp"
            android:textColor="#000"/>

        <TextView
            android:background="#e3000000"
            android:id="@+id/end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/deskripsi_turnamen"
            android:text="2015-06-07"
            android:textSize="10sp"
            android:gravity="end"
            android:padding="2dp"
            android:textColor="#ffffff"/>

    </RelativeLayout>
</LinearLayout>
