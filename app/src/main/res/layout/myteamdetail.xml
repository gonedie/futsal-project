<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="0.5"
    android:background="#57000000">
    <ImageView
        android:id="@+id/fotoplayer"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/logo_login_fifu"
        android:layout_gravity="center"
        android:paddingBottom="50dp"
        android:paddingTop="50dp"/>
    <TextView
        android:id="@+id/namaPemain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:paddingBottom="30dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/umurPemain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:paddingBottom="10dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/tinggiPemain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:paddingBottom="10dp"/>
    <TextView
        android:id="@+id/beratPemain"
        style="@style/Text_Item_Detail_Player"/>


</LinearLayout>