<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Input Your Profile Information"
            android:gravity="center"
            android:layout_marginTop="45dp"
            android:id="@+id/description_signup1"/>
        <TextView
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:id="@+id/text_name"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="45dp"
            android:background="#666666"
            android:layout_below="@+id/description_signup1"
            android:textColor="#ffffff"
            android:text="Name"/>
        <EditText
            android:id="@+id/signup_name"
            android:inputType="text"
            android:layout_toRightOf="@+id/text_name"
            android:layout_alignTop="@+id/text_name"
            android:layout_width="match_parent"
            android:background="@drawable/custom_edit_text"
            android:layout_height="35dp"
            android:paddingLeft="10dp"
            android:hint="Your name"
            android:textColor="#000000"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            />

        <TextView
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:id="@+id/text_beratbadan"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="10dp"
            android:background="#666666"
            android:layout_below="@+id/text_name"
            android:textColor="#ffffff"
            android:text="Weight"/>
        <EditText
            android:id="@+id/signup_beratbadan"
            android:inputType="number"
            android:layout_toRightOf="@+id/text_beratbadan"
            android:layout_alignTop="@+id/text_beratbadan"
            android:layout_width="match_parent"
            android:background="@drawable/custom_edit_text"
            android:layout_height="35dp"
            android:paddingLeft="10dp"
            android:hint="Your weight (Kg)"
            android:textColor="#000000"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            />

        <TextView
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:id="@+id/text_tinggibadan"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="10dp"
            android:background="#666666"
            android:layout_below="@+id/text_beratbadan"
            android:textColor="#ffffff"
            android:text="Height"/>
        <EditText
            android:id="@+id/signup_tinggibadan"
            android:inputType="number"
            android:layout_toRightOf="@+id/text_tinggibadan"
            android:layout_alignTop="@+id/text_tinggibadan"
            android:layout_width="match_parent"
            android:background="@drawable/custom_edit_text"
            android:layout_height="35dp"
            android:paddingLeft="10dp"
            android:hint="Your height (cm)"
            android:textColor="#000000"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            />

        <TextView
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:id="@+id/text_foot"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="10dp"
            android:background="#666666"
            android:layout_below="@+id/text_tinggibadan"
            android:textColor="#ffffff"
            android:text="Foot"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="10dp"
            android:background="#666666"
            android:layout_below="@+id/text_foot"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Birth Date"
            android:textColor="#ffffff"
            android:id="@+id/text_tanggalLahir" />

        <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/datePicker"
            android:layout_below="@+id/text_tanggalLahir"
            android:layout_centerHorizontal="true"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/radio_foot"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/text_foot"
            android:layout_alignTop="@+id/text_foot">
            <RadioButton
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Right"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Left"/>
        </RadioGroup>

    </RelativeLayout>

    </ScrollView>
</FrameLayout>